<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_400</item>
        <item name="colorSecondaryVariant">@color/indigo_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Background -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <!-- Text colors -->
        <item name="textColorPrimary">@color/grey_800</item>
        <item name="textColorSecondary">@color/grey_600</item>
    </style>
</resources>